<div class="authform">
  <%= form_for(@review) do |f| %>

    <%= f.hidden_field :movie_id, value: @movie.id %>

    <%= f.hidden_field :user_id, value: current_user.id if current_user%>
  </div>
  <div class="field">
    <%= f.label :Opinion %><br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit 'Post review' %>
  </div>
<% end %>
</div>
